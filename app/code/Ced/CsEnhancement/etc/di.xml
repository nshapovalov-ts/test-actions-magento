<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--logger-->
    <type name="Ced\CsEnhancement\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Ced\CsEnhancement\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">ced_enhancement_logger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Ced\CsEnhancement\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>
