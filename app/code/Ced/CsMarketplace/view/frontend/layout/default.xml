<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="head.additional">
         <block class="Magento\Framework\View\Element\Template" name="additional.css.scripts" template="Ced_CsMarketplace::html/additional.phtml"/>
    </referenceBlock>
	<body>
		<referenceBlock name="header.links">
			<block class="Magento\Framework\View\Element\Html\Link" name="csmarketplace-link-header"
				   ifconfig="ced_vshops/general/vshoppage_top_title_enable">
				<arguments>
					<argument name="label" xsi:type="helper"
							  helper="Ced\CsMarketplace\Helper\Data::getCsMarketplaceLink"/>
					<argument name="path" xsi:type="string">csmarketplace/vshops/index</argument>
				</arguments>
			</block>
		    <block class="Magento\Framework\View\Element\Html\Link" name="i-am-a-vendor-link-header"
				   ifconfig="ced_vshops/general/vshoppage_title_enable">
				<arguments>
					<argument name="label" xsi:type="helper"
							  helper="Ced\CsMarketplace\Helper\Data::getIamaVendorLink"/>
					<argument name="path" xsi:type="string">csmarketplace</argument>
				</arguments>
			</block>
		</referenceBlock>
		<attribute name="class" value="page-products"/>
	</body>
</page>
