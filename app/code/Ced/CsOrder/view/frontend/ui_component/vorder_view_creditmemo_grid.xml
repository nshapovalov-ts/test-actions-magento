<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">vorder_view_creditmemo_grid.vorder_view_creditmemo_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>vorder_view_creditmemo_columns</spinner>
        <deps>
            <dep>vorder_view_creditmemo_grid.vorder_view_creditmemo_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="vorder_view_creditmemo_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <filterUrlParams>
                <param name="vorder_id">*</param>
            </filterUrlParams>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider"
                      name="vorder_view_creditmemo_grid_data_source">
            <settings>
                <requestFieldName>creditmemo_id</requestFieldName>
                <primaryFieldName>creditmemo_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>false</sticky>
        </settings>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="vorder_view_creditmemo_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">
                        vorder_view_creditmemo_grid.vorder_view_creditmemo_grid.vorder_view_creditmemo_columns.actions
                    </item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <column name="creditmemo_increment_id" sortOrder="1">
            <settings>
                <filter>text</filter>
                <label translate="true">Creditmemo ID #</label>
            </settings>
        </column>
        <column name="creditmemo_created_at" class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date" sortOrder="10">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="shipping_name" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Bill to Name</label>
            </settings>
        </column>
        <column name="state" component="Magento_Ui/js/grid/columns/select" sortOrder="30">
            <settings>
                <filter>select</filter>
                <options class="Ced\CsOrder\Model\System\Config\CreditmemoPaymentStatus"/>
                <dataType>select</dataType>
                <label translate="true">Status</label>
                <sortable>false</sortable>
            </settings>
        </column><column name="base_grand_total" class="Ced\CsOrder\Ui\Component\Listing\Columns\Vcreditmemo\GrandTotal"
                         sortOrder="40">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Amount</label>
            </settings>
        </column>

        <actionsColumn name="actions" class="Magento\Sales\Ui\Component\Listing\Column\ViewAction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">csorder/creditmemo/view</item>
                    <item name="urlEntityParamName" xsi:type="string">creditmemo_id</item>
                </item>
            </argument>
            <settings>
                <indexField>id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
