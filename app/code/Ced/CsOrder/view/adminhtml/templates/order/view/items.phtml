?>
<div class="admin__table-wrapper">
    <table class="data-table admin__table-primary edit-order-table">
        <thead>
        <tr class="headings">
            <th class="col-product"><span><?= /* @noEscape */
                    __('Product') ?></span></th>
            <th class="col-status"><span><?= /* @noEscape */
                    __('Item Status') ?></span></th>
            <th class="col-price-original"><span><?= /* @noEscape */
                    __('Original Price') ?></span></th>
            <th class="col-price"><span><?= /* @noEscape */
                    __('Price') ?></span></th>
            <th class="col-ordered-qty"><span><?= /* @noEscape */
                    __('Qty') ?></span></th>
            <th class="col-subtotal"><span><?= /* @noEscape */
                    __('Subtotal') ?></span></th>
            <th class="col-tax-amount"><span><?= /* @noEscape */
                    __('Tax Amount') ?></span></th>
            <th class="col-tax-percent"><span><?= /* @noEscape */
                    __('Tax Percent') ?></span></th>
            <th class="col-discont"><span><?= /* @noEscape */
                    __('Discount Amount') ?></span></th>
            <th class="col-total last"><span><?= /* @noEscape */
                    __('Row Total') ?></span></th>
        </tr>
