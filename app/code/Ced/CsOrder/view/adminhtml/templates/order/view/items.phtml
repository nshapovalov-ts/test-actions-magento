        <?php $_items = $block->getItemsCollection(); ?>
        <?php $i = 0;
        foreach ($_items as $_item): ?>
            <?php if ($_item->getParentItem() || $_item->getVendorId() != $vendorId) {
                continue;
            } else {
                $i++;
            } ?>
            <?php if ($i > 0): ?>
                <tbody class="<?= /* @noEscape */
                $i % 2 ? 'even' : 'odd' ?>">
                <?= /* @noEscape */
                $block->getItemHtml($_item) ?>
                <?= /* @noEscape */
                $block->getItemExtraInfoHtml($_item) ?>
                </tbody>
            <?php else: $i++; ?>
            <?php endif ?>

        <?php endforeach; ?>
    </table>
