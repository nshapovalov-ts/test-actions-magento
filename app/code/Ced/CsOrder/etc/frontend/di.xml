        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="vinvoice_listing_data_source"
                      xsi:type="string">Ced\CsOrder\Model\ResourceModel\VInvoiceCollection</item>
                <item name="vshipment_listing_data_source"
