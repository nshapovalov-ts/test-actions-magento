									<td class="date"><?=  $_product->getName();	 ?></td>
									<td class="ship"><?= $basePrice->toCurrency($_product->getPrice()) ?></td>   							
									<td class="total">
										<?= $_product->getQty() ?>
									</td>
									<td class="status"><span class="btn btn-outline btn-<?= $status;?>" type="button"><?= $productStatus; ?></span></td>
								</tr>
								<?php $counter++;?>
							<?php endif;?>
						<?php endforeach; ?>
