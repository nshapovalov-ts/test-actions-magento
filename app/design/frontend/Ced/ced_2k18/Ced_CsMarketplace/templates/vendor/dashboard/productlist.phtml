$baseCurrency = $block->getHelper(\Magento\Store\Model\StoreManagerInterface::class)->getStore()->getBaseCurrency()->getCode();
$basePrice = $block->getHelper(\Magento\Framework\Locale\CurrencyInterface::class)->getCurrency($baseCurrency);
?>
<div class="panel panel-default">
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-hover table-striped table-bordered">
				<thead>
					<tr>
						<th class="head"><?= __('Product ID') ?></th>
						<th class="head"><?= __('Product Name') ?></th>
						<th class="head"><?= __('Product Price') ?></th>
						<th class="head"><?= __('Product Qty') ?></th>
						<th class="head"><?= __('Product Status') ?></th>
					</tr>
				</thead>
				<tbody>
					<?php if(count($collection)>0): ?>
						<?php $_odd = ''; ?>
						<?php $counter=0;?>
						<?php foreach ($collection as $_product): ?>
							<?php if($counter<=5):?>
								<?php 
								$status = '';
								switch($_product->getCheckStatus()) {
									case '0' : $status = 'danger'; $productStatus =__('Disapproved'); break;
									case '1' : $status = 'success'; $productStatus =__('Approved');break;
									case '2' : $status = 'info'; $productStatus =__('Pending');break;
									default : $status = 'dander'; $productStatus =__('Deleted');break;
								}
								?>
								<tr class="<?= $status;?> ced_order_info clickable-row" style="cursor: pointer;"  data-href='<?= $this->getUrl('csmarketplace/vproducts/edit',array('id'=>$_product->getProductId(),'type'=>$_product->getType())); ?>'>
